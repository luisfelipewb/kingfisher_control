<launch>
  <arg name="base_dir"/>
  <arg name="exp_name"/>
  <arg name="split_duration" default="6000"/>

  <node pkg="rosbag" type="record" name="rosbag_recorder"
      args="record -o $(arg base_dir)/$(arg exp_name) --split --duration=$(arg split_duration)s --all --exclude='/fake_detector/.*'"/>
  
</launch>
